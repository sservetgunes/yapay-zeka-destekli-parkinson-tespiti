<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ListView
        android:id="@+id/listViewNeckExercises"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




    <ImageView
        android:id="@+id/onbirexercise"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/onbir" />

    <TextView
        android:id="@+id/onbirexercisead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Egzersiz 1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/onbirexercisetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kafanızı düz tutun ve boynunuzu sağa doğru hareket
ettirin ve ardından yavaş yavaş sola doğru hareket ettirin."
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/onikiexercise"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/oniki" />

    <!-- Başlık -->
    <TextView
        android:id="@+id/onikiexercisead"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Egzersiz 2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <!-- Açıklama -->
    <TextView
        android:id="@+id/onikiexercisetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Boynunuzu hafifçe sağa, sonra sola
bükün ve sonra normal pozisyona geri getirin
"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/onucexercise"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/onuc" />

    <!-- Başlık -->
    <TextView
        android:id="@+id/onucexercisead"
        android:layout_height="wrap_content"
        android:text="Egzersiz 3"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" android:layout_width="match_parent"/>

    <!-- Açıklama -->
    <TextView
        android:id="@+id/onucexercisetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Boynunuzu hafifçe öne eğin ve
ardından normal konumuna getirin."
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>
</LinearLayout>
</ScrollView>