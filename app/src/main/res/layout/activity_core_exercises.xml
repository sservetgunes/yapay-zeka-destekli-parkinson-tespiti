<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ListView
        android:id="@+id/listViewCoreExercises"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




    <ImageView
        android:id="@+id/yirmiucexercise"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/yirmiuc" />

    <TextView
        android:id="@+id/yirmiucexercisead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Egzersiz 1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/yirmiucexercisetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dik bir şekilde sandalyeye oturun.
Karnınızı içinize çekin ve nefes alıp verin."
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/yirmidortexercise"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/yirmidort" />

    <!-- Başlık -->
    <TextView
        android:id="@+id/yirmidortexercisead"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Egzersiz 2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <!-- Açıklama -->
    <TextView
        android:id="@+id/yirmidortexercisetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dik bir şekilde sandalyeye oturun. İki elinizi de dizleirnizin
üstüne koyun. Başınızı öne doğru eğin.
Sırtınızı yavaşça eğin ve eski dik pozisyona gelin."
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/yirmibesexercise"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/yirmibes" />

    <!-- Başlık -->
    <TextView
        android:id="@+id/yirmibesexercisead"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Egzersiz 3"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <!-- Açıklama -->
    <TextView
        android:id="@+id/yirmibesexercisetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dik bir şekilde sandalyeye oturun.
Başınızı arkaya ve yukarıya doğru kaldırın."
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/yirmialtiexercise"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/yirmialti" />

    <!-- Başlık -->
    <TextView
        android:id="@+id/yirmialtiexercisead"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Egzersiz 4"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <!-- Açıklama -->
    <TextView
        android:id="@+id/yirmialtiexercisetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dik bir şekilde sandalyeye oturun.
Otururken belinizden vücudunuzu sağ sola hareket ettirin."
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>
</LinearLayout>
</ScrollView>