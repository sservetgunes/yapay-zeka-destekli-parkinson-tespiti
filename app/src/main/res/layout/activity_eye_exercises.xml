<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ListView
            android:id="@+id/listViewEyeExercises"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/dokuzexercise"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dokuz" />

        <TextView
            android:id="@+id/dokuzexercisead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Egzersiz 1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/dokuzexercisetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Başınızı düz tutun gözlerinizle
sağa bakın sonra sola bakın."
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/onexercise"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/on" />

        <!-- Başlık -->
        <TextView
            android:id="@+id/onexercisead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Egzersiz 2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <!-- Açıklama -->
        <TextView
            android:id="@+id/onexercisetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Başınızı düz tutun gözlerinizle
aşağı bakın sonra yukarı bakın"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>